
<div class="container slider">

    <div class="layout sidebar-layout slider-drawer">

      <div class="wrapper sidebar-wrapper border--right-ltgrey bg--white">

        <div class="sidebar">

            <div class="sidebar__top">

              <aside class="region sidebar-search" role="complementary">

                {# {{ page.sidebar_search }} #}
                <div class="searchbar-wrapper">
                  <div class="searchbar">
                    <span class="searchbar__icon"><i class="fa fa-search"></i></span>
                    <span class="searchbar__input"><input type="search" id="search" placeholder="Search..." /><span>
                  </div>
                </div>  

              </aside>

            </div>

            <div class="sidebar__middle buffer--side-top">

              <aside class="region sidebar-nav" role="complementary">

                {{ page.sidebar_nav }}

              </aside>

            </div>
     
            <div class="sidebar__bottom">

              <aside class="region sidebar-links" role="complementary">

                {# {{ page.sidebar_links }} #} {# <span>CN | EN</span>  #} 
                <div class="icongallery-wrapper">
                  <div class="icongallery">
                    <ul class="icongallery__container">
                      <li class="icongallery__item"><a><i class="fa fa-weixin" aria-hidden="true"></i></a></li>
                      <li class="icongallery__item"><a><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                      <li class="icongallery__item"><a><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                      <li class="icongallery__item"><a><i class="fa fa-rss" aria-hidden="true"></i></a></li>
                    </ul>
                  </div>
                </div> 

              </aside>

            </div>

        </div> {# end sidebar #}

      </div> {# end sidebar-wrapper #}
      
    </div> {# end sidebar-layout #}

    <div class="layout main-header-layout slider-canvas">

        <div class="wrapper main-header-wrapper" role="contentinfo">

          <div class="main-header media">

              <aside class="region main-header__right media__imgR" role="contentinfo">
                {{ page.header_right }} 
              </aside>

              <aside class="region main-header__left media__contents" role="contentinfo">
                {{ page.header_left }}
              </aside>

          </div>

        </div>

    </div> {# end header-wrapper #}

    <div class="layout main-content-layout slider-canvas clearfix">

      <div class="wrapper main-content-wrapper buffer--main-top buffer--main-bottom">


        <main class="main-content clearfix" role="main">  

          {% if page.content_slideshow %}
            <div id="main-content-slideshow" class="region main-content__slideshow slideshow">
              {{ page.content_slideshow }}
            </div>
          {% endif %}

          <div id="fullpage" class="fullpage">

            {# <div class="section"></div> #}

            <div class="section">
              <div id="main-content-primary" class="region main-content__primary">
                {{ page.content_primary }}
              </div>
            </div>
            
            <div class="section">
              {% if page.content_relations %}
              <div id="main-content-relations" class="region main-content__primary">
                {{ page.content_relations }}
              </div>
              {% endif %}
            </div>

          </div>

        </main>



      </div> {# end main-content-wrapper #}

      <div class="wrapper main-footer-wrapper bg--white">

        <footer class="footer main-footer" role="contentinfo">
          
          <div id="footer-content-top" class="main-footer__top media border--top-ltgrey">

            <aside class="region main-header__right media__imgR" role="contentinfo">

              <div class="block">
                <div class="block-content icons">
                  <div class="icon--container">
                    <div class="icon"><a><i class="fa fa-weixin" aria-hidden="true"></i></a></div>
                    <div class="icon"><a><i class="fa fa-facebook" aria-hidden="true"></i></a></div>
                    <div class="icon"><a><i class="fa fa-twitter" aria-hidden="true"></i></a></div>
                    <div class="icon"><a><i class="fa fa-rss" aria-hidden="true"></i></a></div>
                  </div>
                </div>
              </div>

              {# {{ page.header_right }}  #}
            </aside>

            <aside class="region main-header__left media__contents" role="contentinfo">

              <div class="block">
                <div class="block-content">
                  <div class="searchbar-wrapper">
                    <div class="searchbar">
                      <span class="searchbar__icon"><i class="fa fa-search"></i></span>
                      <span class="searchbar__input"><input type="search" id="search" placeholder="Search..." /><span>
                    </div>
                  </div>
                </div>
              </div>

              {# {{ page.header_left }} #}
            </aside>

            {# {{ page.footer_top }} #}
          </div>

          <div id="footer-content-middle" class="main-footer__middle">

            <aside class="region" role="complementary">
              {{ page.footer }}
            </aside>

          </div>

          <div id="footer-content-bottom" class="main-footer__bottom">

            <aside class="region" role="complementary" >

              <div class="block">

                <div class="block-contents">

                  {# <div class="titlebar copyright__titlebar media">

                    <div class="icons titlebar__icons media__imgR">
                      <div class="icon--container">
                        <div class="icon"><a style="background:none"><i class="fa fa-github" aria-hidden="true"></i></a></div>
                      </div>
                    </div>

                    <div class="titlebar__title media__contents">
                      <h6 style="text-transform:none;">Copyright © 2011, OPEN Architecture.</h6>
                    </div>

                  </div> #}
                  <div class="ribbon ribbon--med">
                    <div class="ribbon__segments">
                      <span class="ribbon__segment">
                        <a class="icon icon--fa icon--button-big"><i class="fa fa-github" aria-hidden="true"></i></a>
                      </span>
                      <span class="ribbon__segment--left">
                        <h6 class="label" style="text-transform:none;">Copyright © 2011, OPEN Architecture.</h6>
                      </span>
                    </div>
                  </div>

                </div>

              </div>

            </aside>

            {# {{ page.footer_bottom }} #} {# <span>CN | EN</span>  #} 

          </div>

        </footer>

      </div> {# end footer-wrapper #}

    </div> {# end main-wrapper #}

</div> {# end container #}