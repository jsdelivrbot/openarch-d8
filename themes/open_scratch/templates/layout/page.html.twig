
<div class="container">

  <div class="wrapper sidebar-wrapper clearfix">

    <div class="sidebar">

      {% if page.sidebar_top %}
        <aside id="sidebar-content-top" class="region sidebar-content sidebar__top" role="complementary">

          <div class="searchbar-wrapper">
            <div class="searchbar">
              <span class="searchbar__icon"><i class="fa fa-search"></i></span>
              <span class="searchbar__input"><input type="search" id="search" placeholder="Search..." /><span>
            </div>
          </div>
          {# {{ page.sidebar_top }} #}
        </aside>
      {% endif %}

      {% if page.sidebar_middle %}
        <aside id="sidebar-content-middle" class="region sidebar-content sidebar__middle" role="complementary">
          {{ page.sidebar_middle }}
        </aside>
      {% endif %}
 
      {# {% if page.sidebar_bottom %} #}
        <aside id="sidebar-content-bottom" class="region sidebar-content sidebar__bottom" role="complementary">

          <div class="icongallery-wrapper">
            <div class="icongallery">
              <ul class="icongallery__container">
                <li class="icongallery__item"><a><i class="fa fa-weixin" aria-hidden="true"></i></a></li>
                <li class="icongallery__item"><a><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                <li class="icongallery__item"><a><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                <li class="icongallery__item"><a><i class="fa fa-rss" aria-hidden="true"></i></a></li>
              </ul>
            </div>
          </div>
          {# {{ page.sidebar_bottom }} #} {# <span>CN | EN</span>  #} 
        </aside>
      {# {% endif %} #}

    </div>
    
  </div> {# /.layout-menubar #}


  <div class="wrapper menubar-wrapper clearfix">
      <div class="menubar">

        <header class="region header menubar__header" >
          {{ page.header }}   
        </header>

        {% if page.menubar_primary %}
          <aside id="menubar-content-primary" class="region menubar-content menubar__primary" role="complementary">
            {{ page.menubar_primary }}
              
          </aside>
        {% endif %}

        {% if page.menubar_secondary %}
          <aside id="menubar-content-secondary" class="region menubar-content menubar__secondary" role="complementary">
            
            <div class="icons">
              <div class="icon--container">
                <div class="icon"><a><i class="fa fa-bars" aria-hidden="true"></i></a></div>
              </div>
            </div>
            {{ page.menubar_secondary }} {# <span>CN | EN</span>  #} 

          </aside>
        {% endif %}

      </div>
    </div>


  <div class="wrapper main-wrapper clearfix">

    

    {# <div class="wrapper toolbar-wrapper" role="contentinfo">
      
        {% if page.toolbar_left %}
          <div id="main-content-header-left" class="region main-content-header toolbar-left" role="contentinfo">
            {{ page.toolbar_left }}
          </div>
        {% endif %}

        {% if page.toolbar_right %}
          <div id="main-content-header-right" class="region main-content-header toolbar-right" role="contentinfo">
            {{ page.toolbar_right }}
          </div>
        {% endif %}


    </div> #}
    
    <main class="clearfix" role="main">  

      {% if page.content_gallery %}
        <div id="main-content-gallery" class="region main-content">
          {{ page.content_gallery }}
        </div>
      {% endif %}

      {% if page.content_slideshow %}
        <div id="main-content-slideshow" class="region main-content slideshow">
          {{ page.content_slideshow }}
        </div>
      {% endif %}

      <div id="main-content-primary" class="region main-content">
        {{ page.content_primary }}
      </div>
      
      {% if page.content_relations %}
        <div id="main-content-relations" class="region main-content">
          {{ page.content_relations }}
        </div>
      {% endif %}

      {% if page.content_facts %}
        <div id="main-content-facts" class="region main-content">
          <div class="gallery-container factsheet-gallery-container">
            {{ page.content_facts }}
          </div>
        </div>
      {% endif %}

    </main>

    <div class="wrapper footer-wrapper">

      <footer class="region footer main-footer" role="contentinfo">
        
          <aside id="footer-content-top" class="region footer-content footer__top" role="complementary">

            <div class="footer__top-left">
              <div class="searchbar-wrapper">
                <div class="searchbar">
                  <span class="searchbar__icon"><i class="fa fa-search"></i></span>
                  <span class="searchbar__input"><input type="search" id="search" placeholder="Search..." /><span>
                </div>
              </div>
            </div>

            <div class="footer__top-right">
              <div class="icons">
                <div class="icon--container">
                  <div class="icon"><a><i class="fa fa-weixin" aria-hidden="true"></i></a></div>
                  <div class="icon"><a><i class="fa fa-facebook" aria-hidden="true"></i></a></div>
                  <div class="icon"><a><i class="fa fa-twitter" aria-hidden="true"></i></a></div>
                  <div class="icon"><a><i class="fa fa-rss" aria-hidden="true"></i></a></div>
                </div>
              </div>
            </div>

            {# {{ page.footer_top }} #}
          </aside>

        {% if page.footer %}
          <aside id="footer-content-middle" class="region footer-content footer__middle" role="complementary">
            {{ page.footer }}
          </aside>
        {% endif %}

        <aside id="footer-content-bottom" class="region footer-content footer__bottom" role="complementary">
          <div class="titlebar copyright__titlebar">
            <div class="titlebar__title">
              <h6 style="text-transform:none;">Copyright Â© 2011, OPEN Architecture. All Rights Reserved.</h6>
            </div>
            <div class="titlebar__icon">
              <div class="icon--container">
                <div class="icon"><a style="background:none"><i class="fa fa-github" aria-hidden="true"></i></a></div>
              </div>
            </div>
          </div>

          {# {{ page.footer_bottom }} #} {# <span>CN | EN</span>  #} 
        </aside>

      </footer>

    </div>


  </div>{# /.layout-content #}



  

</div>{# /.layout-container #}