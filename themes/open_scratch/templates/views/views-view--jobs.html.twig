{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}
<div{{ attributes.addClass(classes) }}>

  <div class="card jobs bdt bdc--def">

    <div class="card__header">

      <div class="ribbon big">
        <div class="ribbon__segments">
          <div class="ribbon__segment left">

            <h4 class="title title--secondary inline-block">Job Openings</h4>

          </div>
        </div>
      </div>

    </div>

    <div class="card__item card__body">
      {{ rows }}
    </div>

    <div class="card__item pspaced card__footer bdt bdc--def">

      <div class="bd--smltext">
        <p>{{ footer }}</p>
      </div>

    </div>
    
  </div>

  {{ feed_icons }}
</div>