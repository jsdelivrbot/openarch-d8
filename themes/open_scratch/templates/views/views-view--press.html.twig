{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}

<div{{ attributes.addClass(classes) }}>

  <div class="card press spaced--more">

    <div class="card__item card__header">

      <div class="ribbon big">
        <div class="ribbon__segments">
          <div class="ribbon__segment left">

            <div class="label">
              <span class="title ttitle projects-table__title inline-block">List of Publications</span>
            </div>

          </div>
        </div>
      </div>

    </div>

    <div class="card__item card__body">

      <table class="table press-table__table inverter__target">

      	<thead class="press-table__head">
      		<tr>
      			<th class="press-table__head-publication-date">Date</th>
            <th class="press-table__head-publication">Publication</th>
      			<th class="press-table__head-name">Title</th> 
      			<th class="press-table__head-icon data--right">Link / PDF</th>
      		</tr>
      	</thead>

      	<tbody class="focus">
        	{{ rows }}
        </tbody>
        
      </table>

    </div>

    <div class="card__item card__footer invertable bdb bdc--def">

      <div class="ribbon big">
        <div class="ribbon__segments">

          <div class="ribbon__segment left">

            <div>
              {{more}}
              {{pager}}
            </div>

          </div>

          <div class="ribbon__segment right">
            <a class="icon--internal" href="#top"><i class="material-icons">arrow_upward</i></a> 
          </div>

          <div class="ribbon__segment right">
            <h6 class="label">top</h6>
          </div> 

        </div>
      </div>

    </div>

  </div>

  {{ feed_icons }}
</div>