{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}

<div{{ attributes.addClass(classes) }}>

  <div class="card recent-news spaced">

    <div class="card__header">

      <div class="ribbon med">
        <div class="ribbon__segments">
          <div class="ribbon__segment left">

            <h2 class="title title--secondary inline-block">Recent News</h2>

          </div>
        </div>
      </div>

    </div>

    <div class="card__item card__item--spaced card__body">

      {{ rows }}

    </div>

    <div class="card__item card__footer">

        <div class="ribbon med">
          <div class="ribbon__segments">

            <div class="ribbon__segment right">
              <a class="icon--internal" href="{{ events_path }}">
                <i class="material-icons">arrow_forward</i>
              </a> 
            </div>

            <div class="ribbon__segment right">
              <h4 class="label">more News & Events</h4>
            </div> 

          </div>
        </div>

    </div>

  </div>

  {{ feed_icons }}

</div>

