{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}

<div{{ attributes.addClass(classes) }}>

{% if view.total_rows > 0 %}
               
  <div class="card relations media-relations border--top expandable">

    <input type="checkbox" id="related-media" checked>
    <label for="related-media">
    
      <div class="card__item spaced--most card__header">

        <div class="media mediaTitle">

          <div class="media__imgR">

                <div class="ribbon">
                  <div class="ribbon__segments">
                      <div class="ribbon__segment right">

                          <a class="icon icon--fa icon--button-big icon--big checked" style="background:none"><i class="fa fa-angle-up" aria-hidden="true"></i></a>
                          <a class="icon icon--fa icon--button-big icon--big unchecked" style="background:none"><i class="fa fa-angle-down" aria-hidden="true"></i></a>
                      
                      </div>
                  </div>
                </div>

            </div>

          <div class="media__contents">

            <div class="title title--secondary">
              <h4>{{ view.display_handler.display.display_title }} ({{ view.total_rows }})</h4>
            </div>
            
          </div>

        </div>

      </div>

    </label>

    <div class="card__item spaced--most mt--0 card__body expandable-body">

      <div class=""> {# gallery galleryRelations #}
        <ul class=""> {# gallery__container #}
          {{ rows }}
        </ul>
      </div>

    </div>

  </div>
{% endif %}

  {{ feed_icons }}
</div>
